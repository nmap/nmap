 eth_close(eth_t *eth)
 {
+  HANDLE pcapMutex;
+  DWORD wait;
 	if (eth != NULL) {
 		if (eth->pkt != NULL)
 			PacketFreePacket(eth->pkt);
 		if (eth->lpa != NULL)
+    {
+      pcapMutex = CreateMutex(NULL, 0, "Global\\DnetPcapHangAvoidanceMutex");
